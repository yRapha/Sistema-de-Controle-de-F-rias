class Funcionario:
    def __init__(self, nome, dias_trabalhados):
        self.nome = nome
        self.dias_trabalhados = dias_trabalhados
        self.dias_ferias = self.calcular_ferias()

    def calcular_ferias(self):
        return self.dias_trabalhados // 12 * 30

